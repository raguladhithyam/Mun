{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/submit",
      "dest": "/api/submit.js"
    },
    {
      "src": "/api/form",
      "dest": "/api/routes/formRoutes.js"
    },
    {
      "src": "/api/submit/validation-rules",
      "dest": "/api/routes/formRoutes.js"
    },

    {
      "src": "/api/admin/stats",
      "dest": "/api/admin/stats.js"
    },
    {
      "src": "/api/admin/registrations$",
      "dest": "/api/admin/registrations.js"
    },
    {
      "src": "/api/admin/registrations/(.*)",
      "dest": "/api/index.js"
    },

    {
      "src": "/api/admin/templates",
      "dest": "/api/admin/templates.js"
    },
    {
      "src": "/api/admin/send-mail",
      "dest": "/api/admin/send-mail.js"
    },
    {
      "src": "/form",
      "dest": "/public/form.html"
    },
    {
      "src": "/admin",
      "dest": "/public/admin.html"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "public": true
} 